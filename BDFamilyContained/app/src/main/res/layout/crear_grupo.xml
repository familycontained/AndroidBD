<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Título del Menú -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/crear_grupo"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"/>

    <!-- Campo de Nombre del Grupo -->
    <EditText
        android:id="@+id/nombreGrupo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/nombre_grupo"/>

    <!-- Campo de Descripción del Grupo -->
    <EditText
        android:id="@+id/descripcionGrupo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/descripcion_grupo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/creador_del_grupo"
        android:textSize="17sp"/>
    <Spinner
        android:id="@+id/spinnerCreadorGrupo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tarea_asignada_al_grupo"
        android:textSize="17sp"/>
    <Spinner
        android:id="@+id/spinnerTareaGrupo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/AgregarGrupo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/agregar_grupo"/>
</LinearLayout>
